{
    "preset": "psr12",
    "rules": {
        "array_push": true,
        "backtick_to_shell_exec": true,
        "declare_strict_types": true,
        "fully_qualified_strict_types": {
            "import_symbols": true,
            "leading_backslash_in_global_namespace": true
        },
        "global_namespace_import": {
            "import_classes": true,
            "import_constants": true,
            "import_functions": true
        },
        "ordered_class_elements": {
            "order": [
                "use_trait",
                "case",
                "constant",
                "constant_public",
                "constant_protected",
                "constant_private",
                "property_public",
                "property_protected",
                "property_private",
                "construct",
                "destruct",
                "magic",
                "phpunit",
                "method_abstract",
                "method_public_static",
                "method_public",
                "method_protected_static",
                "method_protected",
                "method_private_static",
                "method_private"
            ],
            "sort_algorithm": "none"
        },
        "ordered_imports": {
            "sort_algorithm": "length"
        },
        "ordered_interfaces": {
            "order": "alpha"
        },
        "ordered_traits": {
            "case_sensitive": true
        },
        "strict_comparison": true
    }
}
